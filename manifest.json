{
  "name": "Hello World",
  "description" : "Chrome拡張機能のテストアプリ",
  "version": "1.0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "32": "assets/earth-32px.png"
    },
    "css" : [],
    "js" : []
  },
  "content_scripts": [{
    "matches": ["https://dammy.com/*"],
    "all_frames": true,
    "js": ["src/content.js"]
  }],
  "background": {
    "scripts": ["src/background.js"]
  },
  "icons": {
    "48": "assets/earth-48px.png"
  }
}