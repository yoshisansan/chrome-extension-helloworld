{
  "name": "Hello World",
  "description" : "Chrome拡張機能のテストアプリ",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/assets/earth-32px.png",
      "48": "/assets/earth-48px.png"
    }
  },
  "icons": {
    "32": "/assets/earth-32px.png",
    "48": "assets/earth-48px.png"
  }
}
